<Button>
    size_hint:(0.2, 0.2)
    background_normal: ''
    background_color: (34/255,74/255,67/255)
<CalculatorWidget>
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input_box
            text: "0"
            font_size: 50
            multiline: False
            halign: "right"
            size_hint: (1, 0.19)
            background_normal: ''
            background_color: (255/255,255/255,255/255)
            foreground_color:(50/255,51/255,51/255,1)

        GridLayout
            cols: 4
            rows: 5

            Button:
                text: "%"
                font_size: 45
                on_press: root.signs("%")
            Button:
                text: "C"
                font_size: 45
                on_press: root.clear()
            Button:
                text: u"\u00AB"
                font_size: 45
                on_press: root.remove_last_digit()
            Button:
                text: "/"
                font_size: 45
                background_normal: ''
                background_color: (38/255,46/255,44/255)
                on_press: root.signs("/")



            Button:
                text: "7"
                font_size: 45
                on_press: root.button_value(7)
            Button:
                text: "8"
                font_size: 45
                on_press: root.button_value(8)
            Button:
                text: "9"
                font_size: 45
                on_press: root.button_value(9)
            Button:
                text: "x"
                font_size: 45
                background_normal: ''
                background_color: (38/255,46/255,44/255)
                on_press: root.signs("*")

            Button:
                text: "4"
                font_size: 45
                on_press: root.button_value(4)
            Button:
                text: "5"
                font_size: 45
                on_press: root.button_value(5)
            Button:
                text: "6"
                font_size: 45
                on_press: root.button_value(6)
            Button:
                text: "-"
                font_size: 45
                background_normal: ''
                background_color: (38/255,46/255,44/255)
                on_press: root.signs("-")


            Button:
                text: "1"
                font_size: 45
                on_press: root.button_value(1)
            Button:
                text: "2"
                font_size: 45
                on_press: root.button_value(2)
            Button:
                text: "3"
                font_size: 45
                on_press: root.button_value(3)
            Button:
                text: "+"
                font_size: 45
                background_normal: ''
                background_color: (38/255,46/255,44/255)
                on_press: root.signs("+")


            Button:
                text: "+/-"
                font_size: 45
                on_press: root.polarity()
            Button:
                text: "0"
                font_size: 45
                on_press: root.button_value(0)
            Button:
                text: "."
                font_size: 45
                on_press: root.decimal()
            Button:
                text: "="
                font_size: 45
                background_normal: ''
                background_color: (38/255,46/255,44/255)
                on_press: root.results()